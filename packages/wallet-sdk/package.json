{
  "name": "@lightsparkdev/wallet-sdk",
  "version": "0.3.1",
  "description": "Lightspark JS Wallet SDK",
  "author": "Lightspark Inc.",
  "keywords": [
    "lightspark",
    "bitcoin",
    "lightning",
    "payments",
    "typescript"
  ],
  "homepage": "https://github.com/lightsparkdev/js-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightsparkdev/js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/lightsparkdev/js-sdk/issues"
  },
  "exports": {
    ".": "./dist/index.js",
    "./objects": "./dist/objects/index.js"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "engines": {
    "node": ">=14.16"
  },
  "browser": {
    "crypto": false
  },
  "files": [
    "src/*",
    "dist/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup --entry src/index.ts --entry src/objects/index.ts --format cjs,esm --dts",
    "copy-static": "cp ./package.json ./README.md ./LICENSE ./dist/",
    "dev": "yarn build -- --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "npx prettier --check ./src",
    "format": "npx prettier --write ./src",
    "test": "tsc --noEmit --project tsconfig-test.json && jest --no-cache --runInBand --bail",
    "type-check": "tsc --noEmit",
    "postversion": "yarn build"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lightsparkdev/core": "^0.2.1",
    "@react-native-async-storage/async-storage": "^1.18.1",
    "auto-bind": "^5.0.1",
    "crypto": "^1.0.1",
    "crypto-browserify": "^3.12.0",
    "dayjs": "^1.11.7",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.11.3",
    "ws": "^8.12.1",
    "zen-observable-ts": "^1.1.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/ws": "^8.5.4",
    "jest": "^29.4.1",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
